{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noEmptyBlockStatements": "error",
        "noExplicitAny": "off"
      },
      "style": {
        "useNumberNamespace": "off",
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "complexity": {
        "useOptionalChain": "off"
      }
    }
  },
  "files": {
    "include": ["src/**", "test/**", "examples/**"],
    "ignoreUnknown": true
  }
}
